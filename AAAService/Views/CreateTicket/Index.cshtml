@model IEnumerable<AAAService.Models.user_viewable_locations_view>

@{
    ViewBag.Title = "Index";
}

<h3>Please Choose a Location to Create Service Request</h3>

<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
               @Html.RouteLink("Select", new { controller = "ServiceTickets", action = "Create", id = item.location_guid }));          
            </td>
        </tr>
    }
</table>